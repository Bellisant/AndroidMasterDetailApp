<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/detail_fragment_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:text="name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/detail_logo"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/detail_fragment_url_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autoLink="web"
        android:text="www.name.ru"
        app:layout_constraintStart_toStartOf="@+id/detail_fragment_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/detail_fragment_name_text_view" />

    <TextView
        android:id="@+id/details_fragment_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/detail_logo"
        app:layout_constraintTop_toBottomOf="@+id/detail_fragment_url_text_view" />

    <ImageView
        android:id="@+id/detail_logo"
        android:layout_width="@dimen/icon_size_in_detail"
        android:layout_height="@dimen/icon_size_in_detail"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="On map"
        app:layout_constraintEnd_toEndOf="@+id/detail_logo"
        app:layout_constraintStart_toStartOf="@+id/detail_logo"
        app:layout_constraintTop_toBottomOf="@+id/detail_logo" />
</android.support.constraint.ConstraintLayout>